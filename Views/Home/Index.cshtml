@using ShapeDungeon.DTOs
@using ShapeDungeon.Entities.Enums
@model GameDto

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row align-middle">
        <table style="height:75vh">
            <tbody>
                <tr>
                    <td class="align-middle position-relative" style="width:50vw">
                        @if (Model.Player.Shape == PlayerShape.Square)
                        {
                            <div 
                                id="player"
                                class="position-absolute top-50 start-50 translate-middle"
                                style="height:7.5rem;width:7.5rem;background-color:limegreen"
                            >
                            </div>
                        }
                        else if (Model.Player.Shape == PlayerShape.Triangle)
                        {
                             <div 
                                id="player"
                                class="position-absolute top-50 start-50 translate-middle"
                                style="width:0;height:0;border-top: 5rem solid transparent;border-left: 10rem solid limegreen;border-bottom: 5rem solid transparent"
                            >
                            </div>
                        }
                        else if (Model.Player.Shape == PlayerShape.Circle)
                        {
                             <div 
                                id="player"
                                class="position-absolute top-50 start-50 translate-middle"
                                style="height:10rem;width:10rem;background-color:limegreen;border-radius:50%"
                            >
                            </div>
                        }
                    </td>
                    <td class="align-middle position-relative" style="width:50vw">
                        <div
                            id="room"
                            class="position-absolute top-50 start-50 translate-middle"
                            style="height:50vh;width:50vh;border:solid 1rem white"
                        >
                            <div 
                                id="move-up"
                                class="position-absolute start-50 translate-middle"
                                style="width:100%;top:-2.5rem;"
                            >
                                <button type="button" class="btn btn-outline-dark">Move ⇧</button>
                                <button type="button" class="btn btn-outline-info">Scout ⇧</button>
                            </div>

                            <div 
                                id="move-down"
                                class="position-absolute start-50 translate-middle"
                                style="width:100%;bottom:-5rem;"
                            >
                                <button type="button" class="btn btn-outline-dark">Move ⇩</button>
                                <button type="button" class="btn btn-outline-info">Scout ⇩</button>
                            </div>

                            <div 
                                id="move-left"
                                class="position-absolute top-50 translate-middle"
                                style="width:40%;left:-4.5rem;"
                            >
                                <button type="button" class="btn btn-outline-dark mb-1">Move ⇦</button>
                                <button type="button" class="btn btn-outline-info">Scout ⇦</button>
                            </div>

                            <div 
                                id="move-right"
                                class="position-absolute top-50 start-100 translate-middle-y ms-1"
                                style="width:40%;"
                            >
                                <button type="button" class="btn btn-outline-dark mb-1">Move ⇨</button>
                                <button type="button" class="btn btn-outline-info">Scout ⇨</button>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
