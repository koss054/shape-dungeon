@using ShapeDungeon.DTOs.Room
@model RoomDto

<script src="~/js/room-visual-update.js"></script>

@*Removing borders to show which direction the player can go to*@
@if (Model.CanGoLeft)
{
    <script>
        removeLeftBorder();
    </script>
}

@if (Model.CanGoRight)
{
    <script>
        removeRightBorder();
    </script>
}

@if (Model.CanGoUp)
{
    <script>
        removeTopBorder();
    </script>
}

@if (Model.CanGoDown)
{
    <script>
        removeBottomBorder();
    </script>
}

<script>
    applyRoomStyle();
</script>

@*Applying background depending on the room type*@
@if (Model.IsStartRoom)
{
    <script>
        applyStartBackground();
    </script>
}
else if (Model.IsSafeRoom)
{
    <script>
        applySafeBackground();
    </script>
}
else if (Model.IsEnemyRoom)
{
    <script>
        applyEnemyBackground();
    </script>
}
else if (Model.IsEndRoom)
{
    <script>
        applyEndBackground();
    </script>
}