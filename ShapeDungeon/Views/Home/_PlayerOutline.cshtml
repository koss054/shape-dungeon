@using ShapeDungeon.DTOs.Players;
@using ShapeDungeon.Helpers.Enums;
@model PlayerDto;

<td class="align-middle position-relative" style="width:50vw">
    @if (Model.Shape == Shape.Square)
    {
        <div id="player"
         class="position-absolute top-50 start-50 translate-middle"
         style="height:7.5rem;width:7.5rem;border:0.25rem solid limegreen">
        </div>
    }
    else if (Model.Shape == Shape.Triangle)
    {
        <div 
            id="player"
            class="position-absolute top-50 start-50 translate-middle"
            style="width:0;height:0;
            border-top: 5rem solid transparent;border-left: 10rem solid limegreen;border-bottom: 5rem solid transparent;">
            <div 
                class="position-absolute top-50 translate-middle"
                style="width:0;height:0;left:-5rem;
                border-top: 4rem solid transparent;border-left: 9rem solid #060606;border-bottom: 4rem solid transparent;">
            </div>
        </div>
    }
    else if (Model.Shape == Shape.Circle)
    {
        <div id="player"
         class="position-absolute top-50 start-50 translate-middle"
         style="height:10rem;width:10rem;border:0.25rem solid limegreen;border-radius:50%">
        </div>
    }

    <partial name="_ScoutEnergy" />
</td>